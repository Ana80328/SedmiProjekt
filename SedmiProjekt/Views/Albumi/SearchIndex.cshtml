@model IEnumerable<Albumi>

<h1>Tražilica albuma</h1>
<p>
    <a asp-action="Create" class="btn btn-success"> Unesi novi album</a>
    @using (Html.BeginForm("SearchIndex", "Albumi", FormMethod.Get))
    {
    <p>
        Žanr: @Html.DropDownList("albumZanr", "Svi žanrovi")
        Album: @Html.TextBox("searchString")

        <input type="submit" value="Traži" class="btn btn-info" />
    </p>
    }
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.SlikaUrl)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Izvodac)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Album)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cijena)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Datum)</th>
            <th>Radnje nad podacima</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> <img src="@Html.DisplayFor(modelItem => item.SlikaUrl)" width="100" height="100" alt="@Html.DisplayFor(modelItem => item.Album)" /> </td>
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.Album)</td>
                <td>@Html.DisplayFor(modelItem => item.Izvodac)</td>
                <td>@Html.DisplayFor(modelItem => item.Datum)</td>
                <td>@Html.DisplayFor(modelItem => item.Cijena)</td>
                <td>@Html.DisplayFor(modelItem => item.Zanr.Naziv)</td>
                <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Uredi</a> | <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a></td>
            </tr>
        }
    </tbody>
</table>